<%= simple_nested_form_for(@form) do |f| %>
  <%= f.error_notification %>

	<%= f.input :name %>
	<%= f.input :introduction %>
	<%= f.input :confirmation_message %>
	<%= f.input :max_entries_allowed %>
	<%= f.input :end_date %>
	<%= f.input :start_date %>
	<div class="form-group">
		 <div class="checkbox">
	    <label><%= f.check_box :unique_ip_only %> Allow Only One Entry Per IP</label>
	  </div>
	</div>
	<div class="form-group">
		 <div class="checkbox">
	    <label><%= f.check_box :send_email_confirmation %> Send Confirmation Email to User</label>
	  </div>
	</div>
	<div class="form-group">
		<div class="checkbox">
	    <label><%= f.check_box :show_questions_one_by_one %> Show questions one by one</label>
	  </div>
	</div>

  <br>
  <h4>Fields</h4>
	<%= f.fields_for :fields do |ff| %>
	  <span class="pull-right text-danger"><%= ff.link_to_remove "Remove", confirm: 'Are you sure that you want to remove this field?' %></span>
	  <%= ff.input :name %>
	  <%= ff.input :en_label, as: :string %>
	  <%= ff.input :fr_label, as: :string %>
	  <%= ff.input :en_hint, as: :string %>
	  <%= ff.input :fr_hint, as: :string %>
	  <div class="form-group">
			 <div class="checkbox">
		    <label><%= ff.check_box :required %> Required</label>
		  </div>
		</div>
		<%= ff.input :field_type, collection: FormField::FieldType.options_with_label, include_blank: false, html_input: {class: 'qtype'} %>
        <%= javascript_include_tag "form" %>
        <!--<div id="field-render-area"></div>-->

        <div id="mcq-fields" style="display: none;">
            <%= ff.fields_for :field_options do |fo| %>
              <%= fo.input :name, as: :string, input_html: {style: "width:50%"}, placeholder: 'Value' %>
              <span class="pull-right text-danger" style="margin-right: 333px;margin-top: -40px;"><%= fo.link_to_remove "Remove", confirm: 'Are you sure that you want to remove this field option?'  %></span>
            <% end %>
            <%= ff.link_to_add "Add options", :field_options, class: "btn add-link" %>
        </div>
        <div id="rating-fields" style="display: none;">
            <%= ff.input :scale %>
        </div>
          <div class="row" id="boolean-fields" style="display: none;">
            <div class="col-xs-6 col-sm-6 col-md6"><%= ff.input :true_label, placeholder: "Yes" %></div>
            <div class="col-xs-6 col-sm-6 col-md6"><%= ff.input :false_label, placeholder: "No" %></div>
          </div>

		<hr>
	<% end %>
	<%= f.link_to_add "Add Field", :fields, class: "btn btn-primary add-link" %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>

<% end %>

