<div class="sidebar-nav">
	<ul class="nav nav-tabs">
	  <li class="active"><a href="#fields" data-toggle="tab">Fields</a></li>
	  <li><a href="#settings" data-toggle="tab">Settings</a></li>
	  <li><a href="#style" data-toggle="tab">Style</a></li>
	</ul>

	<!-- Tab panes -->
	<div class="tab-content">
	  <div class="tab-pane active" id="fields">
      <ul style="margin-top:20px;">
			  <li><%= link_to "Single Line Text", '', 'ng-click' => "addField('single_line')" %></li>
			  <li><%= link_to "Paragraph Text", "", 'ng-click' => "addField('paragraph')"  %></li>
			  <li><%= link_to "Boolean", "", 'ng-click' => "addField('boolean')"  %></li>
			  <li><%= link_to "MCQ", "", 'ng-click' => "addField('mcq')"  %></li>
			  <li><%= link_to "Rating", "", 'ng-click' => "addField('rating')"  %></li>
      </ul>
	  </div>

	  <div class="tab-pane" id="settings">
      <h5 style="margin-top:20px;">FORM SETTINGS</h5>
      <%= f.input :introduction, input_html: {value: @form.introduction, "ng-model"=>"form_introduction"} %>
      <%= f.input :confirmation_message %>
      <hr>
      <%= f.input :name, input_html: {"ng-model"=>"form_name"} %>
      <hr>
      <%= f.input :max_entries_allowed %>
      <%= f.input :end_date %>
      <%= f.input :start_date %>
      <hr>
      <div class="form-group">
         <div class="checkbox">
          <label><%= f.check_box :unique_ip_only %> Allow Only One Entry Per IP</label>
        </div>
      </div>
      <div class="form-group">
         <div class="checkbox">
          <label><%= f.check_box :send_email_confirmation %> Send Confirmation Email to User</label>
        </div>
      </div>
      <div class="form-group">
        <div class="checkbox">
          <label><%= f.check_box :show_questions_one_by_one %> Show questions one by one</label>
        </div>
      </div>
    </div>

	  <div class="tab-pane" id="style">
	  	<h5 style="margin-top:20px;">Themes</h5>
      <ul class="form-swatches">
        <li>Blue</li>
        <li>Green</li>
        <li>Red</li>
        <li>Grey</li>
      </ul>
    <h5 style="margin-top:20px;">Custom Theme</h5>
    <p>Add color swatch with live preview for the following sections</p>
    <ul>
      <li>Page Background</li>
      <li>Header</li>
      <li>Form Title</li>
      <li>Form Introduction</li>
      <li>Form Background</li>
      <li>Section Title</li>
      <li>Section Description</li>
      <li>Field Background</li>
      <li>Field Active</li>
      <li>Buttons</li>
    </ul>

    <h5>Typography</h5>
    <p>Integrate with Google fonts</p>

    <h5>Logo</h5>
    <p>Allow user to drag & drop logo</p>
    <p>Logo goes to Header</p>
	  </div>
	</div>
</div>
