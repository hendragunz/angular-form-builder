<div class="sidebar-nav">
	<ul class="nav nav-tabs">
	  <li class="active"><a href="#form-fields" data-toggle="tab">Fields</a></li>
	  <li><a href="#form-settings" data-toggle="tab">Settings</a></li>
	  <li><a href="#form-style" data-toggle="tab">Style</a></li>
	</ul>

	<!-- Tab panes -->
	<div id="form-sidebar" class="tab-content">
	  <div class="tab-pane active" id="form-fields">
      <h5>ADD A FIELD</h5>
      <p style="color:red;">WORKING FIELDS</p>
      <ul>
        <% Enum::FormField::FIELD_TYPE[:options].each do |f_type| %>
          <li><%= link_to t("enumerize.form_field.field_type.#{f_type.to_s}"), '', 'ng-click' => "addField('#{f_type.to_s}')" %></li>
        <% end %>
      </ul>
      <p style="color:red;">TODO </p>
      <ul>
        <li><%= link_to "Statement", "", 'ng-click' => "addField('statement')"  %></li>
        <li><%= link_to "Picture choice", "", 'ng-click' => "addField('picture_choice')"  %></li>
        <li><%= link_to "Question group", "", 'ng-click' => "addField('group')"  %></li>
      </ul>
	  </div>

	  <div class="tab-pane" id="form-settings">
      <h5>FORM SETTINGS</h5>
      <%= f.input :introduction, input_html: {"ng-model"=>"form.introduction"} %>
      <%= f.input :confirmation_message %>
      <hr>
      <%= f.input :name, input_html: {"ng-model"=>"form.name"} %>
      <hr>
      <%= f.input :max_entries_allowed %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <hr>
      <div class="form-group">
         <div class="checkbox">
          <label><%= f.check_box :unique_ip_only %> Allow Only One Entry Per IP</label>
        </div>
      </div>
      <div class="form-group">
         <div class="checkbox">
          <label><%= f.check_box :send_email_confirmation %> Send Confirmation Email to User</label>
        </div>
      </div>
      <div class="form-group">
        <div class="checkbox">
          <label><%= f.check_box :show_questions_one_by_one %> Show questions one by one</label>
        </div>
      </div>
    </div>

	  <div class="tab-pane" id="form-style" ng-controller="FormStyleCtrl">
	  	<h5>STANDARD THEMES</h5>
      <ul class="form-swatches">
        <li>Blue</li>
        <li>Green</li>
        <li>Red</li>
        <li>Grey</li>
      </ul>
    <h5 style="margin-top:20px;">CUSTOM THEME</h5>
    <p>Add color swatch with live preview for the following sections</p>
    <ul>
      <li>Page background</li>
      <li>Form Title</li>
      <li>Form Introduction</li>
      <li>Field Header background</li>
      <li>Field background</li>
      <li>Section Title</li>
      <li>Section Description</li>
      <li>Buttons</li>
    </ul>

    <h5>TYPOGRAPHY</h5>
    <p>Integrate with Google fonts</p>

    <h5>LOGO</h5>
    <p>Allow user to drag & drop logo</p>
    <p>Logo goes to Header</p>
	  </div>
	</div>
</div>
