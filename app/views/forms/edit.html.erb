<%= simple_nested_form_for(@form, html: { class: 'form-horizontal' }) do |f| %>
  <%= content_for :sidebar do %>
    <%= render 'sidebar', f: f %>
  <% end %>
  <%= f.error_notification %>


  <div id="form-container">
    <div class="page-title">
      <h1>{{ form_name || 'Form' }}</h1>
    </div>

    <div class="form-intro">
      {{ form_introduction || 'Introduce the purpose of your form and how you intend to use collected data. Hover to the form settings to replace this message.' }}
    </div>
    {{ form_confirmation_message }}

    <%= render 'fields', f: f %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>