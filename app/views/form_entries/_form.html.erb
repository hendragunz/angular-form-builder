<%= page_title("#{@form.name}") %>

<%= simple_form_for([@form, @entry]) do |f| %>
  <%= f.error_notification %>

  <%= simple_format(@form.introduction) %>

  <%= f.fields_for :answers, OpenStruct.new(@entry.answers) do |builder| %>
    <% @entry.form.fields.each_with_index do |question, index| %>
      <% original_question = FormField.where(form_id: @entry.form_id, name: question.name).first %>
      <%= render "form_fields/fields/field", question: question, f: builder, original_question: original_question, index: index %>
    <% end %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: 'btn btn-success' %>
  </div>
<% end %>