<%= f.fields_for question.id.to_s do |f_address| %>
  <div class="address-field">
    <div class="row">
      <div class="col-xs-12">
        <%= f_address.input "address", as: :string, label: question.field_label, required: question.required, input_html: { placeholder: t('simple_form.placeholders.address') } %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-4">
        <%= f_address.input "city", as: :string, label: false, input_html: { placeholder: t('simple_form.placeholders.city') } %>
      </div>
      <div class="col-xs-4">
        <%= f_address.input "postal_code", as: :string, label: false, input_html: { placeholder: t('simple_form.placeholders.postal_code') } %>
      </div>
      <div class="col-xs-4">
        <%= f_address.input "country", collection: ActionView::Helpers::FormOptionsHelper::COUNTRIES, label: false, prompt: "Country" %>
      </div>
    </div>

    <% if question.field_hint.present? %>
      <div class="row">
        <div class="col-xs-12">
          <p class="help-block"><%= question.field_hint %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>