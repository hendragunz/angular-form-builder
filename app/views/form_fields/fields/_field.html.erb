<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">#<%= index + 1 %> - <%= f.label question.name, "#{question.field_label}" %></h3>
  </div>

  <div class="panel-body">
    <%= image_tag question.field_image.url(:thumb) %>
    <%= render "form_fields/fields/#{question.field_type}", f: f, question: question %>
    <% if question.field_hint.present? %>
      <span class="help-block"><%= question.field_hint %></span>
    <% end %>
  </div>
</div>