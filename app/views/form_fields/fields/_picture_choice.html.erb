<!-- picture choice -->
<%= f.input question.id.to_s, as: :inline_radio_buttons, collection: question.field_options.map{|x| [ (image_tag(x.picture.url(:thumb), class: 'img-thumbnail').html_safe + "<br />#{x.name}".html_safe), x.id]}, label: question.field_label, hint: question.field_hint, required: question.required, class: 'thumbnail' %>