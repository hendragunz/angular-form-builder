<!-- picture choice -->
<%= f.input question.id.to_s, as: :inline_radio_buttons, collection: question.field_options.map{|x| [ (image_tag(x.picture.url(:thumb), alt: x.name, class: 'img-thumbnail').html_safe + "<p class='caption center'><small>#{x.name}</small></p>".html_safe), x.id]}, label: question.field_label, hint: question.field_hint, required: question.required, input_html: { class: 'thumbnail', style: "display: none;" } %>