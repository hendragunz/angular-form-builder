<%= page_title("Entries") do %>
  <%= icon_button_link_to "New Entry", new_evaluation_path, icon: 'plus', white: 'true', level: 'primary', class: 'pull-right' %>
  <%= form_tag new_evaluation_path, method: :get do %>
    <%= select_tag :evaluation_form_id, options_from_collection_for_select(EvaluationForm.active, :id, :name) %>
    <%= submit_tag "New Entry", name: nil, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= link_to "#{l evaluation.created_at, format: :long}", evaluation %></td>
        <td class="tright">
          <%= link_to 'Edit', edit_evaluation_path(evaluation) %> |
          <%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>