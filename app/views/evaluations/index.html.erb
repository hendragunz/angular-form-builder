<%= page_title("Evaluations") do %>
  <%= icon_button_link_to "New Evaluation", new_evaluation_path, icon: 'plus', white: 'true', level: 'primary', class: 'pull-right' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Evaluator</th>
      <th>Resident</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= link_to "#{l evaluation.date, format: :long} - #{evaluation.procedure.try(:name)} ", evaluation %></td>
        <td><%= evaluation.evaluator.try(:full_name) %></td>
        <td><%= evaluation.resident.try(:full_name) %></td>
        <td class="tright">
          <%= link_to 'Edit', edit_evaluation_path(evaluation) %> |
          <%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>