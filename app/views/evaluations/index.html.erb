<h1>Listing evaluations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Procedure</th>
      <th>Evaluation form</th>
      <th>Evaluator</th>
      <th>Resident</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.date %></td>
        <td><%= evaluation.procedure_id %></td>
        <td><%= evaluation.evaluation_form_id %></td>
        <td><%= evaluation.evaluator_id %></td>
        <td><%= evaluation.resident_id %></td>
        <td><%= link_to 'Show', evaluation %></td>
        <td><%= link_to 'Edit', edit_evaluation_path(evaluation) %></td>
        <td><%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Evaluation', new_evaluation_path %>
