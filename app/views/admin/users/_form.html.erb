<% if @user.new_record? %>
  <div class="alert alert-info"><%= t 'users.random_password_will_be_sent', default: "A random password will be sent to the user once created" %>.</div>
<% end %>

<%= simple_form_for([:admin, @user], html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, autofocus: true %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%#= f.input :localization, collection: [["English", "en"], ["FranÃ§ais", "fr"]], include_blank: false  %>
  </div>

  <div class="form-actions">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>